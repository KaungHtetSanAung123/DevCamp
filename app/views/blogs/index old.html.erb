<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div id="blogs">
      <% @blogs.each do |blogs| %>
        <tr>
          <td><%= blogs.title %></td>
          <td><%= blogs.body %></td>
          <td><%= link_to "Show", blogs %></td>
          <td><%= link_to "Edit", edit_blog_path(blogs) %></td>
          <td><%= link_to "Destroy", blogs, method: :delete, data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </div>
  </tbody>
</table>

<br>

<%= link_to "New blog", new_blog_path %>
